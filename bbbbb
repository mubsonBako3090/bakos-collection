8. Next.js Configuration (next.config.js)

js
/** @type {import('next').NextConfig} */
const nextConfig = {
 experimental: {
 turbo: {
 rules: {
 '*.svg': {
 loaders: ['@svgr/webpack'],
 as: '*.js',
 },
 },
 },
 },
 images: {
 domains: ['localhost'],
 formats: ['image/webp'],
 },
 async headers() {
 return [
 {
 source: '/(.*)',
 headers: [
 {
 key: 'X-Frame-Options',
 value: 'DENY',
 },
 {
 key: 'X-Content-Type-Options',
 value: 'nosniff',
 },
 ],
 },
 ];
 },
};

module.exports = nextConfig;


